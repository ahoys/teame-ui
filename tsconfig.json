{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "typings": [
        "src/typings.d.ts"
      ],
      "actions/*": [
        "src/actions/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "dist/*": [
        "dist/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
