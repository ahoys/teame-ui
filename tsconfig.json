{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "dist/*": [
        "dist/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
